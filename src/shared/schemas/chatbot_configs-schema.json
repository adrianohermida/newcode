

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:chatbot_configs",
  "type": "object",
  "title": "Configurações de Chatbot",
  "description": "Vincula personas e comportamentos de IA a canais específicos.",
  "required": ["canal_id", "persona_id"],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "canal_id": {
      "type": "integer",
      "title": "ID do Canal",
      "index": true
    },
    "persona_id": {
      "type": "integer",
      "title": "ID da Persona",
      "index": true
    },
    "intents": {
      "type": "string",
      "title": "Intenções (JSON)",
      "description": "Mapeamento de intenções e respostas rápidas.",
      "multiline": true
    },
    "fallback_policy": {
      "type": "string",
      "title": "Política de Fallback",
      "enum": ["transfer_to_human", "retry_ia", "close_conversation"],
      "default": "transfer_to_human"
    },
    "ativo": {
      "type": "integer",
      "title": "Ativo",
      "default": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}
  
