


{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:tickets",
  "type": "object",
  "title": "Tickets",
  "description": "Armazena os cabeçalhos dos chamados de suporte do helpdesk.",
  "required": ["client_email", "subject"],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "client_email": {
      "type": "string",
      "format": "email",
      "title": "E-mail do Cliente",
      "index": true
    },
    "processo_id": {
      "type": "integer",
      "title": "ID do Processo",
      "description": "Vínculo opcional com um processo jurídico.",
      "index": true
    },
    "subject": {
      "type": "string",
      "title": "Assunto"
    },
    "status": {
      "type": "string",
      "title": "Status",
      "enum": ["Aberto", "Em Atendimento", "Fechado"],
      "default": "Aberto"
    },
    "priority": {
      "type": "string",
      "title": "Prioridade",
      "enum": ["Baixa", "Média", "Alta"],
      "default": "Média"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}


