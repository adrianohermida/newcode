

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:queues",
  "type": "object",
  "title": "Filas de Atendimento",
  "description": "Definição de filas e regras de distribuição.",
  "required": ["name"],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "name": {
      "type": "string",
      "title": "Nome da Fila"
    },
    "routing_rule": {
      "type": "string",
      "title": "Regra de Roteamento",
      "enum": ["round_robin", "skill_based", "manual", "ia_first"],
      "default": "round_robin"
    },
    "active": {
      "type": "integer",
      "title": "Ativo",
      "default": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}
  
