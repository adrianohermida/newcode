

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:plano_pagamento",
  "type": "object",
  "title": "Plano de Pagamento",
  "description": "Armazena os planos de pagamento e simulações de superendividamento dos clientes.",
  "required": [],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "client_email": {
      "type": "string",
      "format": "email",
      "title": "E-mail do Cliente",
      "index": true
    },
    "uniqueness_check": {
      "type": "string",
      "description": "Deduplicação (email + tipo de plano).",
      "unique": true,
      "index": true
    },
    "form_data": {
      "type": "string",
      "description": "Dados do plano (rendas, despesas, dívidas, resultados) em JSON."
    },
    "status": {
      "type": "string",
      "title": "Status",
      "enum": ["Simulação", "Ativo", "Concluído", "Cancelado"],
      "default": "Simulação"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}

