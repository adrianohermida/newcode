

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:custom_fields",
  "type": "object",
  "title": "Campos Personalizados",
  "description": "Define campos dinâmicos para diversas entidades do sistema.",
  "required": ["entidade", "nome_campo", "tipo_campo"],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "escritorio_id": {
      "type": "integer",
      "title": "ID do Escritório",
      "index": true
    },
    "entidade": {
      "type": "string",
      "title": "Entidade Alvo",
      "enum": ["cliente", "processo", "ticket", "user", "escritorio"]
    },
    "nome_campo": {
      "type": "string",
      "title": "Nome do Campo"
    },
    "label": {
      "type": "string",
      "title": "Rótulo (Label)"
    },
    "tipo_campo": {
      "type": "string",
      "title": "Tipo do Campo",
      "enum": ["text", "number", "date", "boolean", "select"]
    },
    "opcoes": {
      "type": "string",
      "title": "Opções (JSON)",
      "description": "Lista de opções para campos do tipo select."
    },
    "obrigatorio": {
      "type": "integer",
      "title": "Obrigatório?",
      "default": 0
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}

