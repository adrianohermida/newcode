

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "urn:table:hearings",
  "type": "object",
  "title": "Audiências",
  "description": "Gerencia as audiências agendadas para os processos.",
  "required": ["processo_id", "data_audiencia", "tipo"],
  "properties": {
    "id": {
      "type": "integer",
      "title": "ID",
      "readOnly": true,
      "primaryKey": true
    },
    "processo_id": {
      "type": "integer",
      "title": "ID do Processo",
      "index": true
    },
    "data_audiencia": {
      "type": "string",
      "format": "date-time",
      "title": "Data e Hora da Audiência"
    },
    "local": {
      "type": "string",
      "title": "Local / Link Virtual"
    },
    "tipo": {
      "type": "string",
      "title": "Tipo de Audiência",
      "enum": ["Conciliação", "Instrução e Julgamento", "Mediação", "Outros"]
    },
    "status": {
      "type": "string",
      "title": "Status",
      "enum": ["Agendada", "Realizada", "Cancelada", "Adiada"],
      "default": "Agendada"
    },
    "observacoes": {
      "type": "string",
      "title": "Observações",
      "multiline": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}
  
