

{
  "contact_form": {
    "dbSchemaName": "contact_submissions",
    "sendNotificationEmail": false,
    "sendFeedbackEmail": false,
    "emailSubject": "Obrigado por entrar em contato",
    "emailTemplate": "<!DOCTYPE html><html><body style=\"font-family: Arial;\"><h1>Olá {{name}}</h1><p>Recebemos sua mensagem e entraremos em contato em breve.</p><p>Assunto: {{subject}}</p><p>Sua mensagem: {{message}}</p></body></html>",
    "replyToEmail": "",
    "jsonSchema": {
      "$schema": "https://json-schema.org/draft-07/schema#",
      "$id": "contact_form_fields",
      "type": "object",
      "title": "Formulário de Contato",
      "description": "Entre em contato conosco para tirar suas dúvidas.",
      "required": ["name", "email", "message"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Nome Completo",
          "placeholder": "Digite seu nome completo",
          "minLength": 3,
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-mail",
          "placeholder": "seu@email.com"
        },
        "phone": {
          "type": "string",
          "title": "Telefone / WhatsApp",
          "placeholder": "(00) 00000-0000"
        },
        "subject": {
          "type": "string",
          "title": "Assunto",
          "enum": ["Dúvidas Gerais", "Superendividamento", "Juros Abusivos", "Golpes Bancários", "Revisão de Contratos", "Outros"],
          "default": "Dúvidas Gerais"
        },
        "message": {
          "type": "string",
          "title": "Mensagem",
          "multiline": true,
          "placeholder": "Descreva sua situação ou dúvida...",
          "minLength": 10,
          "maxLength": 1000
        }
      }
    }
  },
  "appointment_form": {
    "dbSchemaName": "appointments",
    "sendNotificationEmail": false,
    "sendFeedbackEmail": false,
    "emailSubject": "Confirmação de Solicitação de Agendamento",
    "emailTemplate": "<!DOCTYPE html><html><body style=\"font-family: Arial;\"><h1>Olá {{name}}</h1><p>Recebemos sua solicitação de agendamento para o dia {{appointment_date}} às {{appointment_time}}.</p><p>Nossa equipe analisará a disponibilidade e entrará em contato em breve.</p></body></html>",
    "jsonSchema": {
      "$schema": "https://json-schema.org/draft-07/schema#",
      "$id": "appointment_form_fields",
      "type": "object",
      "title": "Dados do Agendamento",
      "required": ["name", "email", "phone"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Nome Completo",
          "placeholder": "Seu nome"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-mail",
          "placeholder": "seu@email.com"
        },
        "phone": {
          "type": "string",
          "title": "Telefone / WhatsApp",
          "placeholder": "(00) 00000-0000"
        },
        "reason": {
          "type": "string",
          "title": "Motivo do Agendamento",
          "enum": ["Consulta Inicial", "Acompanhamento de Processo", "Dúvida sobre Fatura", "Suporte Técnico", "Outros"],
          "default": "Consulta Inicial"
        },
        "description": {
          "type": "string",
          "title": "Observações Adicionais",
          "multiline": true,
          "placeholder": "Conte-nos um pouco mais..."
        }
      }
    }
  },
  "blog_post_form": {
    "dbSchemaName": "blog_posts",
    "sendNotificationEmail": false,
    "sendFeedbackEmail": false,
    "jsonSchema": {
      "$schema": "https://json-schema.org/draft-07/schema#",
      "$id": "blog_post_fields",
      "type": "object",
      "title": "Editor de Artigo",
      "required": ["titulo", "slug", "conteudo", "status"],
      "properties": {
        "titulo": {
          "type": "string",
          "title": "Título do Artigo",
          "placeholder": "Ex: Como funciona a Lei do Superendividamento"
        },
        "slug": {
          "type": "string",
          "title": "URL Amigável (Slug)",
          "placeholder": "ex-como-funciona-a-lei"
        },
        "resumo": {
          "type": "string",
          "title": "Resumo / Chamada",
          "multiline": true,
          "placeholder": "Breve descrição para atrair o leitor..."
        },
        "conteudo": {
          "type": "string",
          "title": "Conteúdo Completo (HTML/Markdown)",
          "multiline": true,
          "placeholder": "Escreva seu artigo aqui..."
        },
        "imagem_capa_url": {
          "type": "string",
          "title": "URL da Imagem de Capa",
          "placeholder": "https://..."
        },
        "categoria_id": {
          "type": "integer",
          "title": "Categoria",
          "enum": [1, 2, 3],
          "enumNames": ["Direito do Consumidor", "Superendividamento", "Institucional"]
        },
        "tags": {
          "type": "string",
          "title": "Tags (separadas por vírgula)",
          "placeholder": "lei14181, dividas, bancos"
        },
        "status": {
          "type": "string",
          "title": "Status",
          "enum": ["rascunho", "publicado", "agendado"],
          "default": "rascunho"
        },
        "data_publicacao": {
          "type": "string",
          "format": "date-time",
          "title": "Data de Publicação"
        },
        "meta_titulo": {
          "type": "string",
          "title": "Meta Título (SEO)",
          "placeholder": "Título para o Google"
        },
        "meta_descricao": {
          "type": "string",
          "title": "Meta Descrição (SEO)",
          "multiline": true,
          "placeholder": "Descrição para o Google"
        }
      }
    }
  },
